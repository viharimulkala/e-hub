{
  "cli": {
    "version": ">= 2.0.0",
    "appVersionSource": "local"
  },
  "build": {
    "production": {
      "env": { "NODE_ENV": "production" }
    },
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "internal": {
      "distribution": "internal",
      "buildType": "apk",
      "env": { "NODE_ENV": "development" }
    }
  }
}
